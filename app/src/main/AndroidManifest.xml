<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.binary">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Binary">
        <activity android:name=".converter.StringToHashActivity" />
        <activity android:name=".converter.BinaryToDecimalActivity" />
        <activity android:name=".converter.DecimalToBinaryActivity" />
        <activity android:name=".converter.TextToBinaryActivity" />
        <activity android:name=".converter.BinaryToTextActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>